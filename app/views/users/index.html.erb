<h1>List of Users</h1>
<div>
<form action="/search">
  <div><input id="search-field" type="search" name="q" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" /></div>
  <div id="search">
    <button class="button-40" type="submit" class="btn btn-outline-primary">search</button>
  </div>
</form>

<div id="friends">

<% @users.each do |user| %>
    <% if !current_user.friends.include?(user) && user != current_user  %>
        <ul class="list-group">
          <li class="list-group-item"><%= user.username %></li>
          <li class="list-group-item">
            <%= link_to "Add Friend", friendships_path(:friend_id => user.id), :method => :post %>
          </li>
        </ul>
  <% end %>
<% end %>
</div>

<div class="col text-center">
<button class="btn btn-default"><%= raw pagy_bootstrap_nav(@pagy) %></button>
</div>
</div>